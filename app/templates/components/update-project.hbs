
<h3>Update this project</h3>
  <form id="update-form">
    <div class="form-group">
      {{input value=name placeholder="Project Name" class="form-control"}}
    </div>

    <div class="form-group">
      {{textarea rows="5" value=detail placeholder="Project Details" class="form-control"}}
    </div>

    <div class="form-group">
      {{input value=owner placeholder="Project Founder(s)" class="form-control"}}
    </div>

    <div class="form-group">
      {{input value=email placeholder="Email" class="form-control"}}
    </div>

    <div class="form-group">
      {{input value=location placeholder="Location" class="form-control"}}
    </div>

    <div class="form-group">
      {{input value=image placeholder="Project Photo URL" class="form-control"}}
    </div>

    <div class="form-group">
      {{input value=goal_amount type="number" placeholder="Funding Goal $$$" class="form-control"}}
    </div>

    <div class="form-group">
      {{input value=goal_date type="date" placeholder="Funding Campaign End Date" class="form-control"}}
    </div>
    <button class="btn btn-success" {{action 'update' project}}>Update Project</button>
  </form>
