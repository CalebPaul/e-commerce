{{#if formShow}}
  <h3>Add Project</h3>
  <div>
    <form class="text-center">
      <div class="form-group">
        {{input value=name id="name" placeholder="Project Name" class="form-control"}}
      </div>

      <div class="form-group">
        {{textarea rows="5" value=detail placeholder="Project Details" class="form-control"}}
      </div>

      <div class="form-group">
        {{input value=owner id="owner" placeholder="Project Founder(s)" class="form-control"}}
      </div>

      <div class="form-group">
        {{input value=email id="email" placeholder="Email" class="form-control"}}
      </div>

      <div class="form-group">
        {{input value=location placeholder="Location" class="form-control"}}
      </div>

      <div class="form-group">
        {{input value=image id="image"  placeholder="Project Photo URL" class="form-control"}}
      </div>

      <div class="form-group">
        {{input value=goal_amount id="goal_amount" type="number" placeholder="Funding Goal $$$" class="form-control"}}
      </div>

      <div class="form-group">
        {{input value=goal_date id="goal_date" type="date" placeholder="Funding Campaign End Date" class="form-control"}}
      </div>
      <button class="btn btn-success" {{action 'save'}}>Save Project</button>
    </form>
  </div>
{{else}}
  <button class="center-block btn btn-info" {{action 'showAddForm'}}>Add Project</button>
{{/if}}
